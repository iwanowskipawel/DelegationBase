@model IEnumerable<BusinessTrip>

@{ 
    ViewBag.Title = "Wszystkie wyjazdy";
    Layout = "_ManageLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Temat</th>
        <th class="text-center">Cel wyjazdu</th>
        <th class="text-center">Data wyjazdu</th>
        <th class="text-center">Data powrotu</th>
        <th></th>
    </tr>

    @foreach (var t in @Model)
    {
    <tr>
        <td class="text-rigth mr-2">@t.BusinessTripID</td>
        <td class="text-center">@t.Project</td>
        <td class="text-center">@t.Destination</td>
        <td class="text-center">@t.DepartureDate.ToShortDateString()</td>
        <td class="text-center">@t.ArrivalDate.ToShortDateString()</td>
        <td class="text-center">
            <form asp-action="Delete" method="post">
                <a asp-action="Edit" class="btn btn-sm btn-warning"
                   asp-route-productId="@t.BusinessTripID">
                    Edit
                </a>
                <input type="hidden" name="ProductID" value="@t.BusinessTripID" />
                <button type="submit" class="btn btn-danger btn-sm">
                    Delete
                </button>
            </form>
        </td>
    </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj wyjazd</a>
</div>