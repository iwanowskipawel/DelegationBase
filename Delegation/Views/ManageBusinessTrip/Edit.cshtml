@model ManageBusinessTripViewModel

@{
    ViewBag.Title = "Edycja wyjazdu";
    Layout = "_ManageLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BusinessTrip.BusinessTripID" />
    <div class="form-group">
        <label asp-for="BusinessTrip.DepartureDate"></label>
        <input asp-for="BusinessTrip.DepartureDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BusinessTrip.ArrivalDate"></label>
        <input asp-for="BusinessTrip.ArrivalDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BusinessTrip.Driver"></label>
        <div>
            @Html.DropDownListFor(x=>Model.SelectedDriver, 
           new SelectList(Model.Drivers, "Value", "Text"), htmlAttributes: new { id="SelectedDriver" })
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BusinessTrip.Project"></label>
        <div>
            @Html.DropDownListFor(x => Model.SelectedProject,
           new SelectList(Model.Projects, "Value", "Text"), htmlAttributes: new { id = "SelectedProject" })
        </div>
    </div>
</form>
