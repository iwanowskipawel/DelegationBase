@model BusinessTripViewModel

<div class="row">
    <div class="align-self-center">
        Strona:
    </div>
    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn secondary"
         page-class-selected="btn btn-primary" class="btn-group pull-right m-1"
         page-url-project="@Model.CurrentProject">
    </div>
    
    </div>
    


<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Temat</th>
        <th class="text-center">Cel wyjazdu</th>
        <th class="text-center">Data wyjazdu</th>
        <th class="text-center">Data powrotu</th>
        <th class="text-center">Kierowca</th>
        <th class="text-center">Dysponent</th>
        <th class="text-center">Samochód</th>
        <th class="text-center">Dystans</th>
    </tr>

    @foreach (var t in @Model.BusinessTrips)
    {
    <tr>
        <td class="text-rigth mr-2">@t.BusinessTripID</td>
        <td class="text-center">@t.Project</td>
        <td class="text-center">@t.Destination</td>
        <td class="text-center">@t.DepartureDate.ToShortDateString()</td>
        <td class="text-center">@t.ArrivalDate.ToShortDateString()</td>
        <td class="text-center">@t.Driver</td>
        <td class="text-center">@t.Keeper</td>
        <td class="text-center">@t.Car</td>
        <td class="text-center">@t.Distance</td>
    </tr>
    }
</table>

<div class="float-right"><a asp-action="Index" asp-controller="ManageBusinessTrip" class="btn btn-primary">Edytuj Listę</a></div>