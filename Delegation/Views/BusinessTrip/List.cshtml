@model BusinessTripViewModel

<div class="row">
    <div class="align-self-center">
        Strona:
    </div>
    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn secondary"
         page-class-selected="btn btn-primary" class="btn-group pull-right m-1">
    </div>
</div>


<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Temat</th>
        <th class="text-center">Cel wyjazdu</th>
        <th class="text-center">Data wyjazdu</th>
        <th class="text-center">Data powrotu</th>
        <th class="text-center">Kierowca</th>
        <th class="text-center">Dysponent</th>
        <th class="text-center">Samochód</th>
        <th class="text-center">Dystans</th>
        <th></th>
    </tr>

    @foreach (var item in @Model.BusinessTrips)
    {
<tr>
    <td class="text-rigth mr-2">@item.BusinessTripID</td>
    <td class="text-center">@item.Project</td>
    <td class="text-center">@item.Destination</td>
    <td class="text-center">@item.DepartureDate.ToShortDateString()</td>
    <td class="text-center">@item.ArrivalDate.ToShortDateString()</td>
    <td class="text-center">@item.Driver</td>
    <td class="text-center">@item.Keeper</td>
    <td class="text-center">@item.Car</td>
    <td class="text-center">@item.Distance</td>
    <td class="text-center">
        <a asp-action="Edit" class="btn btn-sm btn-warning"
           asp-route-productId="@item.BusinessTripID">
            Edit
        </a>
    </td>
</tr>
    }
</table>